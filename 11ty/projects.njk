---
title: My Projects
layout: page
layoutClass: projects
---

<main class="projects-main">
    <h1 class="projects-title">My Projects</h1>
    <div class="projects-list">
        {% for title, props in projects %}
        <article class="projects-list-item">
            <div class="projects-card">
                <a class="projects-card-image" href="{{ props.url | url }}" target="_blank">
                    <img src="{{ props.image | url }}" alt="" />
                    <h2>{{ title }}</h2>
                </a>
                <p class="projects-card-description">
                    <strong>{{ title }}</strong>: {{ props.description }}
                </p>
            </div>
        </article>
        {% endfor %}
    </div>
</main>