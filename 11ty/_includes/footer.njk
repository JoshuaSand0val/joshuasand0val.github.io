<footer class="footer">
    <div class="footer-content">
        <div class="footer-info">
            <span>&copy; {% year %} {{ site.author }}.</span>
            <span>Distributed under the <a href="https://choosealicense.com/licenses/mit/" target="_blank">MIT</a> License.</span>
            <span>Site built with <a href="https://www.11ty.dev/" target="_blank">11ty</a>.</span>
        </div>
        <nav class="footer-nav">
            {% for title, props in nav.footer %}
            <a class="footer-nav-link"
                href="{{ props.url | url }}" title="{{ title }}" aria-label="{{ title }}"
                {% if props.url == page.url %}aria-current="page"{% endif %}>
                <i class="bi bi-{{ props.icon }}"></i>
            </a>
            {% endfor %}
        </nav>
    </div>
    <a href="#" id="footer-toTop" title="Back to top" aria-label="Back to top">
        <i class="bi bi-arrow-up-circle"></i>
    </a>
</footer>
<script>
    window.addEventListener("DOMContentLoaded", function() {
        let footerToTop = document.getElementById("footer-toTop");
        let headroom  = new Headroom(footerToTop, {
            classes: {
                initial: "hidden",
                pinned: "hidden"
            },
        });
        headroom.init();
    });
</script>